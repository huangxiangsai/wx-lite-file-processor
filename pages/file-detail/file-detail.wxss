/* pages/file-detail/file-detail.wxss */
.container {
  background: linear-gradient(180deg, var(--bg-light) 0%, var(--bg-lighter) 100%);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 文件头部区域优化 */
.file-header {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, var(--bg-white) 0%, var(--bg-light) 100%);
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-md);
  border-bottom: 1rpx solid var(--border-light);
  position: relative;
  overflow: hidden;
}

.file-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.02) 0%, rgba(118, 75, 162, 0.02) 100%);
}

.file-icon {
  width: 100rpx;
  height: 100rpx;
  margin-right: 32rpx;
  border-radius: 20rpx;
  box-shadow: var(--shadow-md);
  background: linear-gradient(135deg, var(--bg-light) 0%, var(--bg-white) 100%);
  padding: 10rpx;
  position: relative;
  z-index: 1;
  border: 1rpx solid var(--border-light);
}

.file-info {
  flex: 1;
  margin-right: 28rpx;
  position: relative;
  z-index: 1;
}

.file-name {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  word-break: break-all;
  line-height: 1.4;
  letter-spacing: 0.2rpx;
}

.file-meta {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.file-size, .file-type {
  font-size: 24rpx;
  color: var(--text-secondary);
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, var(--bg-light) 0%, var(--bg-lighter) 100%);
  border-radius: 14rpx;
  font-weight: 500;
  border: 1rpx solid var(--border-light);
}

.file-status {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 24rpx;
  font-weight: 600;
  position: relative;
  z-index: 1;
  box-shadow: var(--shadow-sm);
}

/* 通用区块样式 */
.preview-section, .actions-section, .share-section, .history-section {
  background: linear-gradient(135deg, var(--bg-white) 0%, var(--bg-light) 100%);
  margin: 0 24rpx 24rpx;
  padding: 36rpx 28rpx;
  border-radius: 24rpx;
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-light);
  position: relative;
  overflow: hidden;
}

.preview-section::before, .actions-section::before, 
.share-section::before, .history-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.01) 0%, rgba(118, 75, 162, 0.01) 100%);
  pointer-events: none;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 32rpx;
  position: relative;
  letter-spacing: 0.5rpx;
  z-index: 1;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -12rpx;
  left: 0;
  width: 48rpx;
  height: 4rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--primary-dark));
  border-radius: 2rpx;
}

/* 预览区域 */
.preview-container {
  border-radius: 16rpx;
  overflow: hidden;
  background: linear-gradient(135deg, var(--bg-light) 0%, var(--bg-lighter) 100%);
  min-height: 320rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid var(--border-light);
  box-shadow: inset 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s;
  position: relative;
  z-index: 1;
}

.preview-container:active {
  box-shadow: inset 0 6rpx 16rpx rgba(0, 0, 0, 0.06);
}

.preview-image {
  max-width: 100%;
  max-height: 320rpx;
  border-radius: 12rpx;
}

.preview-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: var(--text-light);
  padding: 48rpx;
}

.preview-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

/* 操作区域 */
.actions-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 36rpx 20rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, var(--bg-light) 0%, var(--bg-white) 100%);
  border: 2rpx solid var(--border-light);
  font-size: 28rpx;
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.action-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.04) 0%, rgba(118, 75, 162, 0.04) 100%);
  opacity: 0;
  transition: opacity 0.3s;
}

.action-item:active {
  transform: translateY(1rpx) scale(0.98);
  box-shadow: var(--shadow-md);
  border-color: rgba(102, 126, 234, 0.1);
}

.action-item:active::before {
  opacity: 1;
}

.action-icon {
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 20rpx;
  filter: drop-shadow(0 2rpx 8rpx rgba(0,0,0,0.08));
  position: relative;
  z-index: 1;
}

.action-name {
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  position: relative;
  z-index: 1;
  letter-spacing: 0.2rpx;
}

.action-desc {
  font-size: 22rpx;
  color: var(--text-secondary);
  text-align: center;
  position: relative;
  z-index: 1;
  font-weight: 500;
  line-height: 1.3;
}

/* 分享区域 */
.share-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.share-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.15) 0%, transparent 100%);
  opacity: 0;
  transition: opacity 0.3s;
}

.share-btn:active::before {
  opacity: 1;
}

.share-btn.primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.25);
}

.share-btn.secondary {
  background: linear-gradient(135deg, var(--bg-light) 0%, var(--bg-lighter) 100%);
  color: var(--text-primary);
  border: 2rpx solid var(--border-light);
  box-shadow: var(--shadow-sm);
}

.share-btn:active {
  transform: translateY(2rpx);
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
}

/* 历史记录区域 */
.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: linear-gradient(135deg, var(--bg-light) 0%, var(--bg-white) 100%);
  border-radius: 12rpx;
  border-left: 4rpx solid var(--primary-color);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-light);
}

.history-time {
  font-size: 22rpx;
  color: var(--text-light);
  margin-right: 24rpx;
  min-width: 100rpx;
}

.history-action {
  flex: 1;
  font-size: 26rpx;
  color: var(--text-primary);
  margin-right: 24rpx;
  font-weight: 500;
}

.history-result {
  font-size: 22rpx;
  font-weight: 600;
}

/* 模态框优化 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(4rpx);
}

.modal-content {
  background: linear-gradient(135deg, var(--bg-white) 0%, var(--bg-light) 100%);
  margin: 32rpx;
  border-radius: 20rpx;
  padding: 32rpx;
  max-height: 80vh;
  overflow-y: auto;
  width: calc(100% - 64rpx);
  max-width: 600rpx;
  box-shadow: var(--shadow-xl);
  border: 1rpx solid var(--border-light);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 32rpx;
  color: var(--text-primary);
}

.convert-options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.convert-option {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: var(--bg-light);
  border-radius: 12rpx;
  border: 2rpx solid var(--border-light);
  font-size: 26rpx;
  transition: all 0.3s;
}

.convert-option:active {
  background: var(--bg-lighter);
  box-shadow: var(--shadow-sm);
}

.option-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
}

.option-text {
  flex: 1;
}

.option-name {
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.option-desc {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.modal-close {
  width: 100%;
  padding: 24rpx;
  background: var(--bg-light);
  color: var(--text-primary);
  border-radius: 12rpx;
  border: 2rpx solid var(--border-light);
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.3s;
}

.modal-close:active {
  background: var(--bg-lighter);
}

/* 加载状态优化 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  backdrop-filter: blur(8rpx);
}

.loading-content {
  background: linear-gradient(135deg, var(--bg-white) 0%, var(--bg-light) 100%);
  padding: 48rpx 40rpx;
  border-radius: var(--radius-lg);
  text-align: center;
  min-width: 320rpx;
  box-shadow: var(--shadow-xl);
  border: 1rpx solid var(--border-light);
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid var(--bg-lighter);
  border-top: 4rpx solid var(--primary-color);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  font-weight: 500;
}

.loading-progress {
  margin-top: 24rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: var(--bg-lighter);
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, var(--primary-color), var(--primary-dark));
  border-radius: 4rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 22rpx;
  color: var(--text-secondary);
}

/* 状态样式 */
.status-ready {
  background: linear-gradient(135deg, #e8f5e8 0%, #f0f9f0 100%);
  color: var(--success-color);
  border: 1rpx solid rgba(40, 167, 69, 0.2);
}

.status-processing {
  background: linear-gradient(135deg, #e6f7ff 0%, #f0f9ff 100%);
  color: var(--info-color);
  border: 1rpx solid rgba(23, 162, 184, 0.2);
}

.status-completed {
  background: linear-gradient(135deg, #f6ffed 0%, #fcffe6 100%);
  color: var(--success-color);
  border: 1rpx solid rgba(40, 167, 69, 0.2);
}

.status-error {
  background: linear-gradient(135deg, #fff2f0 0%, #fff5f5 100%);
  color: var(--error-color);
  border: 1rpx solid rgba(220, 53, 69, 0.2);
}

/* 响应式优化 */
@media (max-width: 400px) {
  .actions-grid {
    grid-template-columns: 1fr;
  }
  
  .file-header {
    flex-direction: column;
    text-align: center;
    padding: 32rpx 24rpx;
  }
  
  .file-icon {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
  
  .file-info {
    margin-right: 0;
    margin-bottom: 16rpx;
  }
  
  .preview-section, .actions-section, 
  .share-section, .history-section {
    margin: 0 16rpx 16rpx;
    padding: 28rpx 20rpx;
  }
}
