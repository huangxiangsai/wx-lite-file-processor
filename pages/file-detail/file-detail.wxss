/* pages/file-detail/file-detail.wxss */
.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.file-header {
  display: flex;
  align-items: center;
  background: white;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.file-icon {
  width: 100rpx;
  height: 100rpx;
  margin-right: 30rpx;
  border-radius: 12rpx;
}

.file-info {
  flex: 1;
  margin-right: 30rpx;
}

.file-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  word-break: break-all;
}

.file-meta {
  display: flex;
  gap: 20rpx;
}

.file-size, .file-type {
  font-size: 24rpx;
  color: #999;
  padding: 6rpx 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
}

.file-status {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.preview-section {
  background: white;
  margin-bottom: 20rpx;
  padding: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.preview-container {
  border-radius: 12rpx;
  overflow: hidden;
  background: #f8f9fa;
  min-height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-image {
  max-width: 100%;
  max-height: 400rpx;
}

.preview-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
  padding: 60rpx;
}

.preview-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.actions-section {
  background: white;
  margin-bottom: 20rpx;
  padding: 40rpx;
}

.actions-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 20rpx;
  border-radius: 16rpx;
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  font-size: 28rpx;
  position: relative;
  transition: all 0.3s;
}

.action-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.action-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
}

.action-name {
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.action-desc {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.share-section {
  background: white;
  margin-bottom: 20rpx;
  padding: 40rpx;
}

.share-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
}

.share-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.share-btn.secondary {
  background: #f8f9fa;
  color: #333;
  border: 2rpx solid #e9ecef;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
}

.history-section {
  background: white;
  padding: 40rpx;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 6rpx solid #667eea;
}

.history-time {
  font-size: 24rpx;
  color: #999;
  margin-right: 30rpx;
  min-width: 120rpx;
}

.history-action {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  margin-right: 30rpx;
}

.history-result {
  font-size: 24rpx;
  font-weight: bold;
}

/* 模态框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  margin: 40rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.convert-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.convert-option {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  font-size: 28rpx;
}

.convert-option:active {
  background: #e9ecef;
}

.option-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 30rpx;
}

.option-text {
  flex: 1;
}

.option-name {
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.option-desc {
  font-size: 24rpx;
  color: #666;
}

.modal-close {
  width: 100%;
  padding: 30rpx;
  background: #f8f9fa;
  color: #333;
  border-radius: 12rpx;
  border: none;
  font-size: 32rpx;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.loading-content {
  background: white;
  padding: 60rpx;
  border-radius: 20rpx;
  text-align: center;
  min-width: 400rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.loading-progress {
  margin-top: 30rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 4rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
}

/* 响应式 */
@media (max-width: 400px) {
  .actions-grid {
    grid-template-columns: 1fr;
  }
  
  .file-header {
    flex-direction: column;
    text-align: center;
  }
  
  .file-icon {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
}