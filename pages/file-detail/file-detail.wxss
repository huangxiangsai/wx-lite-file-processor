/* pages/file-detail/file-detail.wxss */
.container {
  background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.file-header {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  padding: 50rpx 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.file-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.02) 0%, rgba(118, 75, 162, 0.02) 100%);
}

.file-icon {
  width: 120rpx;
  height: 120rpx;
  margin-right: 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  padding: 12rpx;
  position: relative;
  z-index: 1;
}

.file-info {
  flex: 1;
  margin-right: 35rpx;
  position: relative;
  z-index: 1;
}

.file-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 15rpx;
  word-break: break-all;
  line-height: 1.4;
  letter-spacing: 0.5rpx;
}

.file-meta {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}

.file-size, .file-type {
  font-size: 26rpx;
  color: #6c757d;
  padding: 10rpx 18rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 16rpx;
  font-weight: 500;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.file-status {
  font-size: 26rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-weight: 600;
  position: relative;
  z-index: 1;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.preview-section {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  margin: 0 30rpx 30rpx;
  padding: 50rpx 40rpx;
  border-radius: 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 40rpx;
  position: relative;
  letter-spacing: 1rpx;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -15rpx;
  left: 0;
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 2rpx;
}

.preview-container {
  border-radius: 20rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(0, 0, 0, 0.05);
  box-shadow: inset 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.preview-image {
  max-width: 100%;
  max-height: 400rpx;
}

.preview-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
  padding: 60rpx;
}

.preview-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.actions-section {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  margin: 0 30rpx 30rpx;
  padding: 50rpx 40rpx;
  border-radius: 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.actions-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 25rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 45rpx 25rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border: 2rpx solid rgba(233, 236, 239, 0.5);
  font-size: 30rpx;
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
}

.action-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  opacity: 0;
  transition: opacity 0.3s;
}

.action-item:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.12);
}

.action-item:active::before {
  opacity: 1;
}

.action-icon {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 25rpx;
  filter: drop-shadow(0 4rpx 12rpx rgba(0,0,0,0.1));
  position: relative;
  z-index: 1;
}

.action-name {
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 12rpx;
  position: relative;
  z-index: 1;
  letter-spacing: 0.5rpx;
}

.action-desc {
  font-size: 26rpx;
  color: #6c757d;
  text-align: center;
  position: relative;
  z-index: 1;
  font-weight: 500;
}

.share-section {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  margin: 0 30rpx 30rpx;
  padding: 50rpx 40rpx;
  border-radius: 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.share-actions {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
}

.share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 25rpx;
  padding: 35rpx;
  border-radius: 20rpx;
  font-size: 34rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.share-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.2) 0%, transparent 100%);
  opacity: 0;
  transition: opacity 0.3s;
}

.share-btn:active::before {
  opacity: 1;
}

.share-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.3);
}

.share-btn.secondary {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  color: #495057;
  border: 2rpx solid rgba(233, 236, 239, 0.5);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
}

.share-btn:active {
  transform: translateY(2rpx);
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
}

.history-section {
  background: white;
  padding: 40rpx;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 6rpx solid #667eea;
}

.history-time {
  font-size: 24rpx;
  color: #999;
  margin-right: 30rpx;
  min-width: 120rpx;
}

.history-action {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  margin-right: 30rpx;
}

.history-result {
  font-size: 24rpx;
  font-weight: bold;
}

/* 模态框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  margin: 40rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.convert-options {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.convert-option {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  font-size: 28rpx;
}

.convert-option:active {
  background: #e9ecef;
}

.option-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 30rpx;
}

.option-text {
  flex: 1;
}

.option-name {
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.option-desc {
  font-size: 24rpx;
  color: #666;
}

.modal-close {
  width: 100%;
  padding: 30rpx;
  background: #f8f9fa;
  color: #333;
  border-radius: 12rpx;
  border: none;
  font-size: 32rpx;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.loading-content {
  background: white;
  padding: 60rpx;
  border-radius: 20rpx;
  text-align: center;
  min-width: 400rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.loading-progress {
  margin-top: 30rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 4rpx;
  transition: width 0.3s;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
}

/* 响应式 */
@media (max-width: 400px) {
  .actions-grid {
    grid-template-columns: 1fr;
  }
  
  .file-header {
    flex-direction: column;
    text-align: center;
  }
  
  .file-icon {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
}