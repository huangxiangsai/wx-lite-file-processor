/* pages/settings/settings.wxss */
.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.header {
  background: white;
  padding: 40rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.section {
  background: white;
  margin: 30rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f8f9fa;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-info {
  flex: 1;
  margin-right: 30rpx;
}

.setting-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.setting-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

.setting-value {
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
}

.setting-action {
  padding: 16rpx 32rpx;
  background: #f8f9fa;
  color: #333;
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
  font-size: 24rpx;
}

.setting-switch {
  transform: scale(0.8);
}

.quality-slider {
  width: 300rpx;
  margin: 20rpx 0;
}

.danger-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  padding: 30rpx;
  background: #fff2f0;
  color: #fa5151;
  border: 2rpx solid #ffccc7;
  border-radius: 12rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
}

.btn-icon {
  width: 32rpx;
  height: 32rpx;
}

.about-content {
  text-align: center;
  padding: 40rpx 0;
}

.app-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.app-version {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.app-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  padding: 0 20rpx;
}

.about-links {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 40rpx;
}

.link-btn {
  padding: 30rpx;
  background: #f8f9fa;
  color: #333;
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
  font-size: 28rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 30rpx;
  margin-top: 20rpx;
}

.stat-card {
  text-align: center;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  color: white;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 状态样式 */
.status-connected {
  color: #52c41a;
}

.status-error {
  color: #fa5151;
}

.status-unknown {
  color: #999;
}

/* 模态框 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  margin: 40rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  width: calc(100% - 80rpx);
  max-width: 600rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.api-input {
  width: 100%;
  padding: 30rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 28rpx;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  padding: 30rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 32rpx;
}

.modal-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.modal-btn.secondary {
  background: #f8f9fa;
  color: #333;
  border: 2rpx solid #e9ecef;
}

.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.loading-content {
  background: white;
  padding: 60rpx;
  border-radius: 20rpx;
  text-align: center;
}

.loading-text {
  font-size: 32rpx;
  color: #333;
  margin-top: 30rpx;
}

/* 响应式 */
@media (max-width: 400px) {
  .stats-grid {
    grid-template-columns: 1fr;
  }
  
  .setting-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 20rpx;
  }
  
  .quality-slider {
    width: 100%;
  }
}