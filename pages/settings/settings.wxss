/* pages/settings/settings.wxss */
.container {
  background: linear-gradient(180deg, var(--bg-light) 0%, var(--bg-lighter) 100%);
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.header {
  background: linear-gradient(135deg, var(--bg-white) 0%, var(--bg-light) 100%);
  padding: 50rpx 32rpx;
  text-align: center;
  box-shadow: var(--shadow-md);
  border-bottom: 1rpx solid var(--border-light);
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.02) 0%, rgba(118, 75, 162, 0.02) 100%);
}

.title {
  font-size: 38rpx;
  font-weight: 700;
  color: var(--text-primary);
  letter-spacing: 1rpx;
  position: relative;
  z-index: 1;
}

.section {
  background: linear-gradient(135deg, var(--bg-white) 0%, var(--bg-light) 100%);
  margin: 24rpx;
  border-radius: 24rpx;
  padding: 36rpx 28rpx;
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-light);
  position: relative;
  overflow: hidden;
}

.section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.01) 0%, rgba(118, 75, 162, 0.01) 100%);
  pointer-events: none;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid var(--border-light);
  position: relative;
  z-index: 1;
  letter-spacing: 0.5rpx;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 0;
  width: 48rpx;
  height: 4rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--primary-dark));
  border-radius: 2rpx;
}

.section-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
  filter: drop-shadow(0 2rpx 6rpx rgba(0,0,0,0.08));
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 0;
  border-bottom: 1rpx solid var(--border-light);
  position: relative;
  z-index: 1;
  transition: all 0.3s;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background: rgba(102, 126, 234, 0.02);
  margin: 0 -28rpx;
  padding: 28rpx;
  border-radius: 12rpx;
}

.setting-info {
  flex: 1;
  margin-right: 28rpx;
}

.setting-name {
  font-size: 30rpx;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  font-weight: 600;
  letter-spacing: 0.2rpx;
}

.setting-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.4;
  font-weight: 500;
}

.setting-value {
  font-size: 26rpx;
  color: var(--text-primary);
  font-weight: 600;
  background: linear-gradient(135deg, var(--bg-light) 0%, var(--bg-lighter) 100%);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  border: 1rpx solid var(--border-light);
}

.setting-action {
  padding: 16rpx 28rpx;
  background: linear-gradient(135deg, var(--bg-light) 0%, var(--bg-lighter) 100%);
  color: var(--text-primary);
  border-radius: 12rpx;
  border: 1rpx solid var(--border-light);
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: var(--shadow-sm);
}

.setting-action:active {
  transform: translateY(1rpx);
  box-shadow: var(--shadow-md);
  background: var(--bg-lighter);
}

.setting-switch {
  transform: scale(0.85);
}

.quality-slider {
  width: 260rpx;
  margin: 16rpx 0;
}

.danger-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #fff2f0 0%, #fff5f5 100%);
  color: var(--error-color);
  border: 2rpx solid rgba(220, 53, 69, 0.2);
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  margin-top: 32rpx;
  transition: all 0.3s;
}

.danger-btn:active {
  background: #fff2f0;
  border-color: rgba(220, 53, 69, 0.3);
}

.btn-icon {
  width: 28rpx;
  height: 28rpx;
}

.about-content {
  text-align: center;
  padding: 40rpx 0;
  position: relative;
  z-index: 1;
}

.app-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 28rpx;
  border-radius: 24rpx;
  box-shadow: var(--shadow-md);
  background: linear-gradient(135deg, var(--bg-light) 0%, var(--bg-white) 100%);
  padding: 10rpx;
  border: 1rpx solid var(--border-light);
}

.app-name {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  letter-spacing: 0.5rpx;
}

.app-version {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 28rpx;
  font-weight: 500;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  display: inline-block;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
}

.app-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  padding: 0 20rpx;
  font-weight: 500;
}

.about-links {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 32rpx;
}

.link-btn {
  padding: 24rpx;
  background: linear-gradient(135deg, var(--bg-light) 0%, var(--bg-lighter) 100%);
  color: var(--text-primary);
  border-radius: 12rpx;
  border: 1rpx solid var(--border-light);
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s;
  box-shadow: var(--shadow-sm);
}

.link-btn:active {
  background: var(--bg-lighter);
  box-shadow: var(--shadow-md);
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 20rpx;
  margin-top: 24rpx;
  position: relative;
  z-index: 1;
}

.stat-card {
  text-align: center;
  padding: 28rpx 20rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  border-radius: 20rpx;
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.25);
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, transparent 100%);
  opacity: 0;
  transition: opacity 0.3s;
}

.stat-card:active {
  transform: translateY(-1rpx);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.stat-card:active::before {
  opacity: 1;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
  position: relative;
  z-index: 1;
}

.stat-label {
  font-size: 22rpx;
  opacity: 0.95;
  font-weight: 500;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.15);
  position: relative;
  z-index: 1;
}

/* 状态样式 */
.status-connected {
  color: var(--success-color);
}

.status-error {
  color: var(--error-color);
}

.status-unknown {
  color: var(--text-light);
}

/* 模态框优化 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(4rpx);
}

.modal-content {
  background: linear-gradient(135deg, var(--bg-white) 0%, var(--bg-light) 100%);
  margin: 32rpx;
  border-radius: 20rpx;
  padding: 32rpx;
  width: calc(100% - 64rpx);
  max-width: 600rpx;
  box-shadow: var(--shadow-xl);
  border: 1rpx solid var(--border-light);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 32rpx;
  color: var(--text-primary);
}

.api-input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid var(--border-light);
  border-radius: 12rpx;
  font-size: 28rpx;
  margin-bottom: 32rpx;
  box-sizing: border-box;
  background: var(--bg-light);
  color: var(--text-primary);
  transition: all 0.3s;
}

.api-input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.modal-actions {
  display: flex;
  gap: 16rpx;
}

.modal-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.3s;
}

.modal-btn.primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2);
}

.modal-btn.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.modal-btn.secondary {
  background: var(--bg-light);
  color: var(--text-primary);
  border: 2rpx solid var(--border-light);
}

.modal-btn.secondary:active {
  background: var(--bg-lighter);
}

.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  backdrop-filter: blur(8rpx);
}

.loading-content {
  background: linear-gradient(135deg, var(--bg-white) 0%, var(--bg-light) 100%);
  padding: 48rpx;
  border-radius: 20rpx;
  text-align: center;
  box-shadow: var(--shadow-xl);
  border: 1rpx solid var(--border-light);
  min-width: 280rpx;
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-top: 24rpx;
  font-weight: 500;
}

/* 响应式优化 */
@media (max-width: 400px) {
  .stats-grid {
    grid-template-columns: 1fr;
  }
  
  .setting-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 16rpx;
  }
  
  .quality-slider {
    width: 100%;
  }
  
  .setting-info {
    margin-right: 0;
  }
  
  .section {
    margin: 16rpx;
    padding: 28rpx 20rpx;
  }
}
