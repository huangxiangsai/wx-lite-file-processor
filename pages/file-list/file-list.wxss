/* pages/file-list/file-list.wxss */
.container {
  background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  padding: 50rpx 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.header-content {
  flex: 1;
}

.title {
  font-size: 42rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.file-count {
  font-size: 26rpx;
  color: #6c757d;
  font-weight: 500;
}

.add-btn {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.add-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4);
}

.add-icon {
  width: 44rpx;
  height: 44rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0,0,0,0.2));
}

.search-section {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.search-bar {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 60rpx;
  padding: 25rpx 35rpx;
  margin-bottom: 35rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.search-bar:focus-within {
  border-color: rgba(102, 126, 234, 0.3);
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.filter-btn {
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
  background: none;
  border: none;
  padding: 0;
}

.filter-icon {
  width: 32rpx;
  height: 32rpx;
}

.filter-tabs {
  white-space: nowrap;
}

.filter-tab {
  display: inline-block;
  padding: 20rpx 36rpx;
  margin-right: 25rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #6c757d;
  border: 2rpx solid rgba(0, 0, 0, 0.05);
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.filter-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-color: transparent;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
  transform: translateY(-2rpx);
}

.file-list {
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  margin: 0 30rpx 30rpx;
  border-radius: 28rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.file-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 35rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.file-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.03) 0%, rgba(118, 75, 162, 0.03) 100%);
  opacity: 0;
  transition: opacity 0.3s;
}

.file-item:last-child {
  border-bottom: none;
}

.file-item:active {
  transform: translateX(8rpx);
}

.file-item:active::before {
  opacity: 1;
}

.file-left {
  display: flex;
  align-items: center;
  flex: 1;
  margin-right: 30rpx;
}

.file-icon {
  width: 88rpx;
  height: 88rpx;
  margin-right: 35rpx;
  border-radius: 18rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  padding: 8rpx;
}

.file-info {
  flex: 1;
  overflow: hidden;
  position: relative;
  z-index: 1;
}

.file-name {
  font-size: 34rpx;
  color: #2c3e50;
  font-weight: 600;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 0.5rpx;
}

.file-meta {
  display: flex;
  gap: 15rpx;
  flex-wrap: wrap;
}

.file-size, .file-time, .file-source {
  font-size: 24rpx;
  color: #6c757d;
  padding: 8rpx 16rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 12rpx;
  font-weight: 500;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.file-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.file-status {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.action-menu-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f8f9fa;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #999;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.3;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  margin-bottom: 60rpx;
  line-height: 1.6;
}

.empty-action-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 50rpx;
  padding: 30rpx 60rpx;
  font-size: 32rpx;
  border: none;
}

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx 40rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.selected-info {
  font-size: 28rpx;
  color: #333;
}

.batch-actions {
  display: flex;
  gap: 20rpx;
}

.batch-btn {
  padding: 20rpx 30rpx;
  border-radius: 8rpx;
  border: none;
  font-size: 28rpx;
  background: #f8f9fa;
  color: #333;
}

/* 操作菜单 */
.action-menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}

.action-menu {
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  padding: 40rpx;
  width: 100%;
  max-height: 60vh;
  overflow-y: auto;
}

.menu-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.menu-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: none;
  font-size: 32rpx;
  color: #333;
  text-align: left;
}

.menu-item.danger {
  color: #fa5151;
}

.menu-item .menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}

/* 模态框通用样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  margin: 40rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  max-height: 80vh;
  overflow-y: auto;
  width: calc(100% - 80rpx);
  max-width: 600rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.filter-section {
  margin-bottom: 40rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.filter-chips {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.filter-chip {
  padding: 16rpx 32rpx;
  background: #f8f9fa;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
  border: 2rpx solid transparent;
}

.filter-chip.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.sort-picker {
  background: #f8f9fa;
  padding: 30rpx;
  border-radius: 12rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.modal-btn {
  flex: 1;
  padding: 30rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 32rpx;
}

.modal-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.modal-btn.secondary {
  background: #f8f9fa;
  color: #333;
  border: 2rpx solid #e9ecef;
}

.rename-input {
  width: 100%;
  padding: 30rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

/* 状态样式 */
.status-ready {
  background: #e8f5e8;
  color: #52c41a;
}

.status-processing {
  background: #e6f7ff;
  color: #1890ff;
}

.status-completed {
  background: #f6ffed;
  color: #52c41a;
}

.status-error {
  background: #fff2f0;
  color: #ff4d4f;
}

/* 响应式 */
@media (max-width: 400px) {
  .file-meta {
    flex-direction: column;
    gap: 10rpx;
  }
  
  .bottom-actions {
    flex-direction: column;
    gap: 20rpx;
    align-items: stretch;
  }
  
  .batch-actions {
    justify-content: center;
  }
}