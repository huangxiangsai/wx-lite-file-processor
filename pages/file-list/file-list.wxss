/* pages/file-list/file-list.wxss */
.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: white;
  padding: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.header-content {
  flex: 1;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.file-count {
  font-size: 24rpx;
  color: #999;
}

.add-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-icon {
  width: 40rpx;
  height: 40rpx;
}

.search-section {
  background: white;
  padding: 30rpx 40rpx;
  margin-bottom: 20rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.filter-btn {
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
  background: none;
  border: none;
  padding: 0;
}

.filter-icon {
  width: 32rpx;
  height: 32rpx;
}

.filter-tabs {
  white-space: nowrap;
}

.filter-tab {
  display: inline-block;
  padding: 16rpx 32rpx;
  margin-right: 20rpx;
  background: #f8f9fa;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
  border: 2rpx solid transparent;
}

.filter-tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.file-list {
  background: white;
  margin: 0 30rpx 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.file-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s;
}

.file-item:last-child {
  border-bottom: none;
}

.file-item:active {
  background-color: #f8f9fa;
}

.file-left {
  display: flex;
  align-items: center;
  flex: 1;
  margin-right: 30rpx;
}

.file-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
  border-radius: 12rpx;
}

.file-info {
  flex: 1;
  overflow: hidden;
}

.file-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.file-meta {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.file-size, .file-time, .file-source {
  font-size: 24rpx;
  color: #999;
  padding: 4rpx 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
}

.file-actions {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.file-status {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-weight: bold;
}

.action-menu-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f8f9fa;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #999;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.3;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  margin-bottom: 60rpx;
  line-height: 1.6;
}

.empty-action-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 50rpx;
  padding: 30rpx 60rpx;
  font-size: 32rpx;
  border: none;
}

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx 40rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.selected-info {
  font-size: 28rpx;
  color: #333;
}

.batch-actions {
  display: flex;
  gap: 20rpx;
}

.batch-btn {
  padding: 20rpx 30rpx;
  border-radius: 8rpx;
  border: none;
  font-size: 28rpx;
  background: #f8f9fa;
  color: #333;
}

/* 操作菜单 */
.action-menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}

.action-menu {
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  padding: 40rpx;
  width: 100%;
  max-height: 60vh;
  overflow-y: auto;
}

.menu-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.menu-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: none;
  font-size: 32rpx;
  color: #333;
  text-align: left;
}

.menu-item.danger {
  color: #fa5151;
}

.menu-item .menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}

/* 模态框通用样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  margin: 40rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  max-height: 80vh;
  overflow-y: auto;
  width: calc(100% - 80rpx);
  max-width: 600rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.filter-section {
  margin-bottom: 40rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.filter-chips {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.filter-chip {
  padding: 16rpx 32rpx;
  background: #f8f9fa;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
  border: 2rpx solid transparent;
}

.filter-chip.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.sort-picker {
  background: #f8f9fa;
  padding: 30rpx;
  border-radius: 12rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.modal-btn {
  flex: 1;
  padding: 30rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 32rpx;
}

.modal-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.modal-btn.secondary {
  background: #f8f9fa;
  color: #333;
  border: 2rpx solid #e9ecef;
}

.rename-input {
  width: 100%;
  padding: 30rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

/* 状态样式 */
.status-ready {
  background: #e8f5e8;
  color: #52c41a;
}

.status-processing {
  background: #e6f7ff;
  color: #1890ff;
}

.status-completed {
  background: #f6ffed;
  color: #52c41a;
}

.status-error {
  background: #fff2f0;
  color: #ff4d4f;
}

/* 响应式 */
@media (max-width: 400px) {
  .file-meta {
    flex-direction: column;
    gap: 10rpx;
  }
  
  .bottom-actions {
    flex-direction: column;
    gap: 20rpx;
    align-items: stretch;
  }
  
  .batch-actions {
    justify-content: center;
  }
}