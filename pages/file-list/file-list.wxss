/* pages/file-list/file-list.wxss */
.container {
  background: linear-gradient(180deg, var(--bg-light) 0%, var(--bg-lighter) 100%);
  min-height: 100vh;
  padding-bottom: 160rpx;
}

/* 顶部头部区域优化 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, var(--bg-white) 0%, var(--bg-light) 100%);
  padding: 40rpx 32rpx;
  box-shadow: var(--shadow-md);
  border-bottom: 1rpx solid var(--border-light);
  position: sticky;
  top: 0;
  z-index: 10;
}

.header-content {
  flex: 1;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
  letter-spacing: 0.5rpx;
}

.file-count {
  display: inline-flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-secondary);
  font-weight: 500;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.08) 0%, rgba(118, 75, 162, 0.08) 100%);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
}

.add-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--radius-full);
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.25);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.add-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.2) 0%, transparent 100%);
  opacity: 0;
  transition: opacity 0.3s;
}

.add-btn:active::before {
  opacity: 1;
}

.add-btn:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

.add-icon {
  width: 36rpx;
  height: 36rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(0,0,0,0.2));
}

/* 搜索和筛选区域优化 */
.search-section {
  background: var(--bg-white);
  padding: 32rpx;
  margin: 24rpx 24rpx 0;
  border-radius: 24rpx;
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-light);
}

.search-bar {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, var(--bg-light) 0%, var(--bg-lighter) 100%);
  border-radius: 50rpx;
  padding: 20rpx 28rpx;
  margin-bottom: 28rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.search-bar::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.03) 0%, rgba(118, 75, 162, 0.03) 100%);
  opacity: 0;
  transition: opacity 0.3s;
}

.search-bar:focus-within {
  border-color: rgba(102, 126, 234, 0.2);
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.05);
}

.search-bar:focus-within::before {
  opacity: 1;
}

.search-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 16rpx;
  opacity: 0.5;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-primary);
  background: transparent;
  position: relative;
  z-index: 1;
}

.filter-btn {
  width: 56rpx;
  height: 56rpx;
  margin-left: 16rpx;
  background: none;
  border: none;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s;
}

.filter-btn:active {
  background: rgba(102, 126, 234, 0.1);
}

.filter-icon {
  width: 28rpx;
  height: 28rpx;
}

.filter-tabs {
  white-space: nowrap;
  padding-bottom: 8rpx;
}

.filter-tab {
  display: inline-block;
  padding: 16rpx 28rpx;
  margin-right: 20rpx;
  background: linear-gradient(135deg, var(--bg-light) 0%, var(--bg-lighter) 100%);
  border-radius: 32rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
  border: 2rpx solid var(--border-light);
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.filter-tab::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
  opacity: 0;
  transition: opacity 0.3s;
}

.filter-tab.active {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: white;
  border-color: transparent;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
  transform: translateY(-1rpx);
}

.filter-tab:active::before {
  opacity: 1;
}

/* 文件列表区域优化 */
.file-list {
  background: var(--bg-white);
  margin: 24rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-light);
}

.file-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid var(--border-light);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.file-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.02) 0%, rgba(118, 75, 162, 0.02) 100%);
  opacity: 0;
  transition: opacity 0.3s;
}

.file-item:last-child {
  border-bottom: none;
}

.file-item:active {
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.03) 0%, rgba(118, 75, 162, 0.03) 100%);
}

.file-item:active::before {
  opacity: 1;
}

.file-left {
  display: flex;
  align-items: center;
  flex: 1;
  margin-right: 24rpx;
}

.file-icon {
  width: 76rpx;
  height: 76rpx;
  margin-right: 28rpx;
  border-radius: var(--radius-md);
  box-shadow: var(--shadow-sm);
  background: linear-gradient(135deg, var(--bg-light) 0%, var(--bg-white) 100%);
  padding: 6rpx;
  border: 1rpx solid var(--border-light);
}

.file-info {
  flex: 1;
  overflow: hidden;
  position: relative;
  z-index: 1;
}

.file-name {
  font-size: 32rpx;
  color: var(--text-primary);
  font-weight: 600;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 0.2rpx;
}

.file-meta {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.file-size, .file-time, .file-source {
  font-size: 22rpx;
  color: var(--text-light);
  padding: 6rpx 12rpx;
  background: linear-gradient(135deg, var(--bg-light) 0%, var(--bg-lighter) 100%);
  border-radius: 10rpx;
  font-weight: 500;
  border: 1rpx solid var(--border-light);
}

.file-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.file-status {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-weight: 600;
  min-width: 60rpx;
  text-align: center;
}

.status-ready {
  background: linear-gradient(135deg, #e8f5e8 0%, #f0f9f0 100%);
  color: var(--success-color);
  border: 1rpx solid rgba(40, 167, 69, 0.2);
}

.status-processing {
  background: linear-gradient(135deg, #e6f7ff 0%, #f0f9ff 100%);
  color: var(--info-color);
  border: 1rpx solid rgba(23, 162, 184, 0.2);
}

.status-completed {
  background: linear-gradient(135deg, #f6ffed 0%, #fcffe6 100%);
  color: var(--success-color);
  border: 1rpx solid rgba(40, 167, 69, 0.2);
}

.status-error {
  background: linear-gradient(135deg, #fff2f0 0%, #fff5f5 100%);
  color: var(--error-color);
  border: 1rpx solid rgba(220, 53, 69, 0.2);
}

.action-menu-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: var(--radius-full);
  background: var(--bg-light);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  border: 1rpx solid var(--border-light);
}

.action-menu-btn:active {
  background: var(--bg-lighter);
  box-shadow: var(--shadow-sm);
}

.menu-icon {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.6;
}

/* 空状态优化 */
.empty-state {
  text-align: center;
  padding: 100rpx 32rpx;
  color: var(--text-light);
  background: var(--bg-white);
  margin: 24rpx;
  border-radius: 24rpx;
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-light);
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.3;
  filter: grayscale(0.5);
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: var(--text-secondary);
}

.empty-desc {
  font-size: 26rpx;
  margin-bottom: 48rpx;
  line-height: 1.6;
  color: var(--text-light);
}

.empty-action-btn {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: white;
  border-radius: 40rpx;
  padding: 28rpx 48rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.25);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.empty-action-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.3);
}

/* 底部操作栏优化 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(135deg, var(--bg-white) 0%, var(--bg-light) 100%);
  padding: 24rpx 32rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid var(--border-light);
  backdrop-filter: blur(20rpx);
}

.selected-info {
  font-size: 26rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.batch-actions {
  display: flex;
  gap: 16rpx;
}

.batch-btn {
  padding: 16rpx 24rpx;
  border-radius: var(--radius-md);
  border: none;
  font-size: 26rpx;
  font-weight: 500;
  background: var(--bg-light);
  color: var(--text-primary);
  border: 1rpx solid var(--border-light);
  transition: all 0.3s;
}

.batch-btn:active {
  background: var(--bg-lighter);
  box-shadow: var(--shadow-sm);
}

/* 操作菜单优化 */
.action-menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
  backdrop-filter: blur(4rpx);
}

.action-menu {
  background: linear-gradient(135deg, var(--bg-white) 0%, var(--bg-light) 100%);
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx;
  width: 100%;
  max-height: 60vh;
  overflow-y: auto;
  border-top: 1rpx solid var(--border-light);
}

.menu-title {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 32rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.menu-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  background: var(--bg-light);
  border-radius: var(--radius-md);
  border: none;
  font-size: 30rpx;
  color: var(--text-primary);
  text-align: left;
  transition: all 0.3s;
  border: 1rpx solid var(--border-light);
}

.menu-item:active {
  background: var(--bg-lighter);
  box-shadow: var(--shadow-sm);
}

.menu-item.danger {
  color: var(--error-color);
}

.menu-item .menu-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 24rpx;
}

/* 模态框通用优化 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(4rpx);
}

.modal-content {
  background: linear-gradient(135deg, var(--bg-white) 0%, var(--bg-light) 100%);
  margin: 32rpx;
  border-radius: 20rpx;
  padding: 32rpx;
  max-height: 80vh;
  overflow-y: auto;
  width: calc(100% - 64rpx);
  max-width: 560rpx;
  box-shadow: var(--shadow-xl);
  border: 1rpx solid var(--border-light);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 32rpx;
  color: var(--text-primary);
}

.filter-section {
  margin-bottom: 32rpx;
}

.filter-label {
  font-size: 26rpx;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  font-weight: 600;
}

.filter-chips {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.filter-chip {
  padding: 12rpx 24rpx;
  background: var(--bg-light);
  border-radius: 24rpx;
  font-size: 22rpx;
  color: var(--text-secondary);
  border: 2rpx solid var(--border-light);
  transition: all 0.3s;
}

.filter-chip.active {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: white;
  border-color: transparent;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2);
}

.sort-picker {
  background: var(--bg-light);
  padding: 24rpx;
  border-radius: var(--radius-md);
  border: 1rpx solid var(--border-light);
}

.picker-text {
  font-size: 26rpx;
  color: var(--text-primary);
}

.modal-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
}

.modal-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: var(--radius-md);
  border: none;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.3s;
}

.modal-btn.primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.2);
}

.modal-btn.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.modal-btn.secondary {
  background: var(--bg-light);
  color: var(--text-primary);
  border: 2rpx solid var(--border-light);
}

.modal-btn.secondary:active {
  background: var(--bg-lighter);
}

.rename-input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid var(--border-light);
  border-radius: var(--radius-md);
  font-size: 30rpx;
  margin-bottom: 32rpx;
  background: var(--bg-light);
  color: var(--text-primary);
}

.rename-input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

/* 响应式优化 */
@media (max-width: 400px) {
  .file-meta {
    flex-direction: column;
    gap: 8rpx;
  }
  
  .bottom-actions {
    flex-direction: column;
    gap: 16rpx;
    align-items: stretch;
    padding: 20rpx 24rpx;
  }
  
  .batch-actions {
    justify-content: center;
  }
  
  .search-section {
    margin: 16rpx;
    padding: 24rpx;
  }
  
  .file-list {
    margin: 16rpx;
  }
}
