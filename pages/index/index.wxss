/* pages/index/index.wxss */
.container {
  padding: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

.container::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.08) 0%, transparent 70%);
  animation: float 8s ease-in-out infinite;
  z-index: 1;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20px) rotate(180deg); }
}

.header {
  text-align: center;
  padding: 80rpx 40rpx 60rpx;
  color: white;
  position: relative;
  z-index: 2;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 16rpx 32rpx rgba(0,0,0,0.2);
  background: rgba(255,255,255,0.15);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: auto;
  margin-right: auto;
  border: 1rpx solid rgba(255,255,255,0.2);
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 8rpx rgba(0,0,0,0.3);
  letter-spacing: 1rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  font-weight: 400;
  letter-spacing: 0.5rpx;
}

/* 选择文件区域优化 */
.action-section {
  background: rgba(255, 255, 255, 0.95);
  margin: 0 24rpx 32rpx;
  border-radius: 28rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  z-index: 2;
}

.action-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 36rpx;
  text-align: center;
  position: relative;
}

.action-title::after {
  content: '';
  position: absolute;
  bottom: -16rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--primary-dark));
  border-radius: 2rpx;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 36rpx 16rpx;
  border-radius: 20rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 600;
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.2) 0%, transparent 100%);
  opacity: 0;
  transition: opacity 0.3s;
}

.action-btn:active::before {
  opacity: 1;
}

.action-btn.primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: white;
  box-shadow: 0 10rpx 28rpx rgba(102, 126, 234, 0.35);
}

.action-btn.secondary {
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  color: var(--text-primary);
  border: 2rpx solid rgba(233, 236, 239, 0.4);
}

.action-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.btn-icon {
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 16rpx;
  filter: drop-shadow(0 2rpx 6rpx rgba(0,0,0,0.1));
}

/* 最近文件区域 */
.quick-actions {
  margin: 0 24rpx 32rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 24rpx;
  padding: 0 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.3);
}

.recent-files {
  white-space: nowrap;
  padding: 0 16rpx;
}

.recent-file-item {
  display: inline-block;
  width: 160rpx;
  margin-right: 24rpx;
  text-align: center;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 28rpx 20rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.08);
}

.recent-file-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 10rpx 32rpx rgba(0, 0, 0, 0.12);
}

.file-thumbnail {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.file-name {
  font-size: 24rpx;
  color: white;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 功能展示区域优化 */
.features-section {
  background: rgba(255, 255, 255, 0.95);
  margin: 0 24rpx 32rpx;
  border-radius: 28rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.12);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  z-index: 2;
}

.features-section .section-title {
  color: var(--text-primary);
  text-shadow: none;
  margin-bottom: 32rpx;
  padding: 0;
  position: relative;
}

.features-section .section-title::after {
  content: '';
  position: absolute;
  bottom: -16rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background: linear-gradient(90deg, var(--primary-color), var(--primary-dark));
  border-radius: 2rpx;
}

.features-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.feature-item {
  text-align: center;
  padding: 32rpx 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 18rpx;
  border: 1rpx solid rgba(233, 236, 239, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.feature-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.04) 0%, rgba(118, 75, 162, 0.04) 100%);
  opacity: 0;
  transition: opacity 0.3s;
}

.feature-item:active::before {
  opacity: 1;
}

.feature-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.feature-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 20rpx;
  filter: drop-shadow(0 2rpx 8rpx rgba(0,0,0,0.08));
}

.feature-name {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 600;
  position: relative;
  z-index: 1;
}

/* 统计区域 */
.stats-section {
  background: rgba(255, 255, 255, 0.15);
  margin: 0 24rpx 40rpx;
  border-radius: 28rpx;
  padding: 40rpx 32rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  z-index: 2;
}

.stats-section .section-title {
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 28rpx;
}

.stats-grid {
  display: flex;
  gap: 32rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  color: white;
  padding: 28rpx 16rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 18rpx;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.15);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.stat-number {
  font-size: 44rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
  font-weight: 500;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 响应式优化 */
@media (max-width: 400px) {
  .action-buttons {
    flex-direction: column;
    gap: 16rpx;
  }
  
  .features-grid {
    grid-template-columns: 1fr;
  }
  
  .stats-grid {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .container {
    padding-bottom: 40rpx;
  }
}
